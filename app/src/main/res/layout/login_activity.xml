<?xml version="1.0" encoding="utf-8"?>


<io.cordova.zhihuiyouzhuan.widget.InputMethodLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"

    android:orientation="vertical"


    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ScrollView
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_toRightOf="@+id/layout_back"
                android:visibility="visible"
                android:id="@+id/layout_close"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@mipmap/login_bbg"
                    android:paddingBottom="@dimen/dp20"
                    android:scaleType="fitXY" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:padding="@dimen/dp12"
                    android:src="@mipmap/login_logo"
                    android:layout_centerInParent="true"
                    />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:src="@mipmap/cha" />

                <TextView
                    android:id="@+id/tv_find_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码?"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_gravity="center|center_vertical"
                    android:id="@+id/l_1"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/black"
                        android:padding="@dimen/sp12"

                        android:text="用户名"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_phoneNum"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="用户名"
                            android:textCursorDrawable="@null"
                            android:padding="@dimen/dp12"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp13"
                            android:text=""
                            android:gravity="center|start"/>

                        <ImageView
                            android:layout_width="15dp"
                            android:src="@mipmap/gantan"
                            android:id="@+id/gantan"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/dp12"
                            android:layout_gravity="center"
                            android:layout_height="15dp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0.5"
                        android:layout_marginLeft="@dimen/dp12"
                        android:layout_marginRight="@dimen/dp12"
                        android:background="@color/gray2"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/l_2"
                    android:layout_margin="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/black"
                        android:padding="@dimen/sp12"
                        android:text="密码"/>
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="密码"
                        android:textCursorDrawable="@null"
                        android:padding="@dimen/dp12"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp13"
                        android:text=""
                        android:gravity="center|start"
                        android:inputType="textPassword"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0.5"
                        android:layout_marginLeft="@dimen/dp12"
                        android:layout_marginRight="@dimen/dp12"
                        android:background="@color/gray2"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        style="@style/button2"
                        android:id="@+id/btn_login"
                        android:text="@string/login"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="40dp"
                        android:textColor="@color/white" />
                    <Button
                        android:visibility="gone"
                        style="@style/button2"
                        android:id="@+id/btn_login_3"
                        android:text="@string/exit_out"
                        android:layout_marginTop="@dimen/sp12"
                        android:textColor="@color/colorPrimary" />







                    <TextView
                        android:id="@+id/tv_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/sp12"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="其他登录方式"
                        android:visibility="gone"
                        />



                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="220dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    >

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <WebView
                android:visibility="gone"
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></WebView>
        </LinearLayout>
    </ScrollView>



</io.cordova.zhihuiyouzhuan.widget.InputMethodLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@mipmap/student_bg"
                android:layout_height="260dp">


                <TextView
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="@dimen/dp50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管理者 0000001"
                    android:textColor="#fff"
                    android:paddingLeft="@dimen/dp10"
                    android:id="@+id/name_tv"
                    android:paddingRight="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:gravity="center"
                    android:background="@drawable/blue_track"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:text="TUE."
                        android:id="@+id/xingqi_tv"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:text="5月28日"
                        android:id="@+id/date_tv"
                        android:layout_marginLeft="@dimen/dp20"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:text="今日有4门课程"
                    android:id="@+id/today_class"
                    android:layout_marginLeft="@dimen/dp20"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp20"
                    android:text="明天有2门课程"
                    android:id="@+id/tom_class"
                    android:layout_marginLeft="@dimen/dp20"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardMaxElevation = "5dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/dp50"
                        android:layout_marginLeft="@dimen/dp10"
                        android:src="@mipmap/notice"
                        android:layout_height="30dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:text="您有10条信息待查看，请及时查看"
                            android:id="@+id/message_num"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@mipmap/right_gray"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp10"
                            />
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/dp15"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="推荐服务"
                android:textSize="@dimen/sp14"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp30"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardMaxElevation = "5dp"
                card_view:cardPreventCornerOverlap="true"
                card_view:cardUseCompatPadding="true">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/service_rc"
                    android:layout_gravity="center"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/dp15"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="数据提醒"
                android:textSize="@dimen/sp14"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp20"
                android:layout_height="wrap_content" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="130dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="115dp"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp15"
                        android:layout_marginRight="@dimen/dp5"
                        card_view:cardBackgroundColor="#279CFA"
                        card_view:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation = "5dp"
                        card_view:cardPreventCornerOverlap="true"
                        card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginTop="@dimen/dp15"
                                android:text="一卡通余额"
                                android:textColor="@color/white" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_marginBottom="@dimen/dp10"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:layout_marginTop="@dimen/dp15"
                                    android:text="0/元"
                                    android:textColor="@color/white" />
                                <ImageView
                                    android:layout_width="50dp"
                                    android:src="@mipmap/message_logo"
                                    android:layout_height="50dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="115dp"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        card_view:cardBackgroundColor="#18D2CF"
                        card_view:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation = "5dp"
                        card_view:cardPreventCornerOverlap="true"
                        card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginTop="@dimen/dp15"
                                android:text="逾期图书"
                                android:textColor="@color/white" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_marginBottom="@dimen/dp10"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:layout_marginTop="@dimen/dp15"
                                    android:text="0/条"
                                    android:textColor="@color/white" />
                                <ImageView
                                    android:layout_width="50dp"
                                    android:src="@mipmap/message_logo"
                                    android:layout_height="50dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="115dp"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        card_view:cardBackgroundColor="#279CFA"
                        card_view:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation = "5dp"
                        card_view:cardPreventCornerOverlap="true"
                        card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginTop="@dimen/dp15"
                                android:text="已审批"
                                android:textColor="@color/white" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_marginBottom="@dimen/dp10"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:layout_marginTop="@dimen/dp15"
                                    android:text="0/条"
                                    android:textColor="@color/white" />
                                <ImageView
                                    android:layout_width="50dp"
                                    android:src="@mipmap/message_logo"
                                    android:layout_height="50dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="115dp"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        card_view:cardBackgroundColor="#18D2CF"
                        card_view:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation = "5dp"
                        card_view:cardPreventCornerOverlap="true"
                        card_view:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_marginTop="@dimen/dp15"
                                android:text="未审批"
                                android:textColor="@color/white" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginRight="@dimen/dp10"
                                android:layout_marginBottom="@dimen/dp10"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:layout_marginTop="@dimen/dp15"
                                    android:text="0/条"
                                    android:textColor="@color/white" />
                                <ImageView
                                    android:layout_width="50dp"
                                    android:src="@mipmap/message_logo"
                                    android:layout_height="50dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>


            </HorizontalScrollView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp15"
                android:src="@drawable/student_banner"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <com.flyco.tablayout.SlidingTabLayout
                    android:id="@+id/tl"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    tl:tl_tab_padding="0dp"
                    tl:tl_tab_width="@dimen/dp70"
                    tl:tl_indicator_height="@dimen/dp8"
                    tl:tl_iconVisible="false"
                    tl:tl_indicator_margin_top="-10dp"
                    tl:tl_indicator_corner_radius="@dimen/dp15"
                    tl:tl_indicator_color="#91B9FE"
                    tl:tl_textSelectColor="@color/black"
                    tl:tl_textsize="@dimen/sp14"
                    tl:tl_textBold="BOTH"
                    tl:tl_textUnselectColor="#66000000"
                    />

                <TextView
                    android:id="@+id/more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp15"
                    android:gravity="right|center"
                    android:text="更多"
                    android:textColor="#279CFA"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>



            <io.cordova.zhihuiyouzhuan.utils.NoScrollViewPager
                android:id="@+id/vp"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>





        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/scroll_layout"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@mipmap/school_logo_w"
                android:layout_height="50dp" />

            <ImageView
                android:layout_width="25dp"
                android:src="@mipmap/scan_img_w"
                android:layout_marginLeft="@dimen/dp100"
                android:gravity="right"
                android:layout_height="50dp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

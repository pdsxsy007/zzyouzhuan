<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/ys_title_bg"
        android:layout_height="@dimen/dp100">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/left_arrow"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="@dimen/dp10"
                android:layout_width="wrap_content"
                android:text="搜索"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_height="25dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ban_bai2"
            android:orientation="horizontal"
            android:layout_height="match_parent">

          <ImageView
              android:layout_width="wrap_content"
              android:src="@mipmap/search2"
              android:layout_marginLeft="@dimen/dp15"
              android:layout_gravity="center_vertical"
              android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="请输入查询内容"
                android:textSize="@dimen/sp12"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="搜 索"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp12"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:background="@drawable/ban_bai2"
            android:layout_marginLeft="@dimen/dp15"

            android:layout_height="wrap_content" />
    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/ban_bai"
        android:layout_marginTop="-15dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/dp15"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:text="使用记录"
            android:textSize="@dimen/sp14"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp30"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="@dimen/dp15"
            android:layout_width="match_parent"
            android:text="清除记录"
            android:textSize="@dimen/sp11"
            android:gravity="right"
            android:layout_marginTop="-10dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

        <com.donkingliang.labels.LabelsView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/labels"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            app:labelBackground="@drawable/biao_bg"
            app:labelTextColor="@color/gray3"
            app:labelTextSize="14sp"
            app:labelTextPaddingBottom="5dp"
            app:labelTextPaddingLeft="10dp"
            app:labelTextPaddingRight="10dp"
            app:labelTextPaddingTop="5dp"
            app:lineMargin="10dp"
            app:wordMargin="10dp"
            app:selectType="SINGLE"
            app:maxLines="3"
            app:maxSelect="5"
            app:minSelect="1"
            app:isIndicator="true" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp15"
            android:layout_height="match_parent">


        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
